<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.detailteams.DetailTeamsActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:rotation="330"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="70dp"
        android:foregroundGravity="clip_vertical"
        android:src="@drawable/ic_club"
        app:layout_constraintBottom_toTopOf="@+id/tabs_main"
        app:layout_constraintEnd_toStartOf="@+id/img_teams_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/hijau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:background="@drawable/ic_bg_home"
        app:layout_constraintBottom_toTopOf="@+id/tabs_main_detail_team" />
        <!--android:rotation="180"-->
        app:layout_constraintBottom_toTopOf="@+id/tabs_main_detail_team"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_teams_detail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_club"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nama_team_detail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="Chelsea"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/hijau3"
        android:fontFamily="@font/seguisb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_teams_detail" />

    <TextView
        android:id="@+id/tv_tahun_team_detail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        tools:text="1999"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/hijau3"
        android:fontFamily="@font/seguisb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_team_detail" />

    <TextView
        android:id="@+id/tv_stadium_team_detail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        tools:text="stamford bridge"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/hijau3"
        android:fontFamily="@font/seguisb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tahun_team_detail" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs_main_detail_team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_detail_teams"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs_main_detail_team">

    </android.support.v4.view.ViewPager>
    <ProgressBar
        android:id="@+id/progress_detail_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</android.support.constraint.ConstraintLayout>